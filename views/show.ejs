<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pinterest-Posts</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div
      class="w-full px-10 py-2 flex justify-between bg-zinc-800 text text-white items-center"
    >
      <h3>Pinterest</h3>
      <div class="flex gap-10 items-center">
        <a href="/profile">Profile</a>
        <a href="/feed">feed</a
        ><a class="px-3 py-2 bg-red-700 text-white rounded-lg" href="/logout"
          >Logout</a
        >
      </div>
    </div>
    <div class="w-full min-h-screen bg-zinc-800 px-20 py-10 text-white">
      <div class="cards flex flex-wrap gap-10">
        <% user.posts.forEach(element => { %>
        <div class="card w-96">
          <div class="w-96 h-96 rounded-lg object-cover overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= element.image %>" alt="" />
          </div>
          <h5 class="mt-2 text-lg"><%= element.title %></h5>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
